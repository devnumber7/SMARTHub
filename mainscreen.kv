<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "This is the Main Screen"
            font_size: '32sp'
            bold: True
            size_hint_y: 0.8
        Button:
            text: "Exit App"
            font_size: '20sp'
            size_hint_y: 0.2
            on_press: app.stop()  # Closes the app
